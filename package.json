{
  "name": "@2bad/eslint-config",
  "version": "1.0.0",
  "description": "",
  "keywords": [
    "eslint",
    "linter",
    "typescript"
  ],
  "homepage": "https://github.com/2BAD/eslint-config#readme",
  "bugs": {
    "url": "https://github.com/2BAD/eslint-config/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/2BAD/eslint-config.git"
  },
  "license": "MIT",
  "author": "2BAD (https://github.com/2BAD)",
  "contributors": [
    {
      "name": "Jason Hyde",
      "email": "github@2bad.me",
      "url": "https://github.com/mrhyde"
    }
  ],
  "type": "module",
  "exports": "./build/index.js",
  "typings": "./build/index.d.ts",
  "files": [
    "build"
  ],
  "scripts": {
    "prebuild": "rimraf build",
    "build": "run-p build:*",
    "postbuild": "run-s fix:alias fix:ext",
    "build:swc": "swc ./source -d ./build --strip-leading-paths",
    "build:types": "tsc --project tsconfig.build.json",
    "check": "run-p check:*",
    "check:code": "eslint . --report-unused-disable-directives --max-warnings 0",
    "check:format": "biome format ./source",
    "fix": "run-s fix:code fix:format",
    "fix:alias": "tsc-alias -p tsconfig.build.json",
    "fix:code": "run-s 'check:code -- --fix'",
    "fix:ext": "./fix-ext.sh",
    "fix:format": "biome format --write ./source",
    "prepublishOnly": "run-s build",
    "preversion": "run-s check test build",
    "test": "vitest run",
    "test:integration": "vitest run integration --coverage",
    "test:unit": "vitest run unit --coverage"
  },
  "dependencies": {
    "@eslint/compat": "1.1.0",
    "@eslint/js": "9.5.0",
    "@types/eslint__js": "8.42.3",
    "typescript-eslint": "8.0.0-alpha.30"
  },
  "devDependencies": {
    "@2bad/tsconfig": "3.0.1",
    "@biomejs/biome": "1.8.1",
    "@swc/cli": "0.3.12",
    "@swc/core": "1.6.1",
    "@types/node": "20.14.2",
    "@vitest/coverage-v8": "1.6.0",
    "npm-run-all2": "6.2.0",
    "rimraf": "5.0.7",
    "tsc-alias": "1.8.10",
    "typescript": "5.4.5",
    "vite-tsconfig-paths": "4.3.2",
    "vitest": "1.6.0"
  },
  "peerDependencies": {
    "eslint": ">= 9",
    "typescript": ">= 5"
  },
  "packageManager": "npm@10.8.1",
  "engines": {
    "node": ">=20"
  },
  "volta": {
    "node": "22.3.0",
    "npm": "10.8.1"
  }
}
